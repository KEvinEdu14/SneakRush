{
  "openapi": "3.0.3",
  "info": {
    "title": "User Profile Service API",
    "version": "1.0.0",
    "description": "API REST para operaciones CRUD parciales del perfil de usuario."
  },
  "servers": [
    {
      "url": "http://localhost:4005"
    }
  ],
  "tags": [
    {
      "name": "UserProfile",
      "description": "Operaciones de perfil de usuario"
    }
  ],
  "paths": {
    "/api/profile/{user_id}": {
      "get": {
        "summary": "Obtener perfil de usuario",
        "tags": ["UserProfile"],
        "parameters": [
          {
            "in": "path",
            "name": "user_id",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Perfil encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserProfileOut"
                }
              }
            }
          },
          "404": {
            "description": "Usuario no encontrado"
          }
        }
      },
      "put": {
        "summary": "Actualizar perfil de usuario",
        "tags": ["UserProfile"],
        "parameters": [
          {
            "in": "path",
            "name": "user_id",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserProfileIn"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Perfil actualizado"
          },
          "400": {
            "description": "Error de validación"
          },
          "404": {
            "description": "Usuario no encontrado"
          }
        }
      }
    },
    "/api/profile": {
      "post": {
        "summary": "Crear nuevo perfil de usuario",
        "tags": ["UserProfile"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserProfileIn"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Perfil creado"
          },
          "400": {
            "description": "Error de validación"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "UserProfileIn": {
        "type": "object",
        "required": ["user_id", "first_name", "last_name"],
        "properties": {
          "user_id": {
            "type": "integer"
          },
          "first_name": {
            "type": "string"
          },
          "last_name": {
            "type": "string"
          },
          "bio": {
            "type": "string"
          },
          "image_url": {
            "type": "string"
          },
          "birthdate": {
            "type": "string",
            "format": "date"
          }
        }
      },
      "UserProfileOut": {
        "allOf": [
          {
            "$ref": "#/components/schemas/UserProfileIn"
          }
        ]
      }
    }
  }
}
